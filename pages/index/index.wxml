<view class="pyg_index">
  <!--搜索框  -->
  <SearchInput></SearchInput>
  <!-- 轮播图开始 -->
  <view class="swiper_index">
    <swiper indicator-dots autoplay interval="1000" circular>
      <swiper-item wx:for="{{swiperList}}" wx:key="goods_id">
        <image mode="widthFix" src="{{item.image_src}}" />
      </swiper-item>
    </swiper>
  </view>  
  <!-- 分类导航 -->
  <view class="index_cate">
    <navigator wx:for="{{catesList}}" wx:key="name">
      <image src="{{item.image_src}}" mode="widthFix"/> 
    </navigator>
  </view>
  <!-- 楼层 -->
  <view class="index_floor">
    <view class="floor_group" wx:for="{{floorList}}" wx:key="floor_title" wx:for-item="item1" wx:for-index="index1">
      <!-- 标题 -->
      <view class="floor_title">
        <image mode="widthFix" src="{{item1.floor_title.image_src}}"/>
      </view>  
      <!-- 内容 -->
      <view class="floor_list">
        <navigator  url="/pages/search/index" wx:for="{{item1.product_list}}" wx:key="name" wx:for-item="item2" wx:for-index="index2">
          <image src="{{item2.image_src}}" mode="{{index2 === 0 ? 'widthFix':'scaleToFill'}}"></image>
        </navigator>
      </view>
    </view>   
  </view>
</view>